<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">  
        <h1>Your answer</h1>
          <hr>
          <%= form_for [@question, @question.answers.build] do |f| %>
            <div class="form-group">
              <%= f.text_area :text, rows: 5, class: "form-control", placeholder: "Answer"%>                
            </div

            <div class="form-group">
              <%= f.submit "Answer", class: "btn btn-primary" %>
            </div>
        <% end %>        
    </div>
  </div>
</div>