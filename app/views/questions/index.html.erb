<div class="container">
            <h1>Questions</h1>
            <%= link_to 'Make a quetion', new_question_path, class:"question-button btn btn-primary btn-sm" %>
<br>
<br>
    <table class="table">
        <tbody class="table-striped">
            <% @questions.each do |question| %>
            <tr>
                <td></td>
                <td>
                    <h1><%= link_to question.title, question_path(question) %></h1>
                    <% unless question.user.nil? %>
                    <p class="help-block">Asked by <%= question.user.email %> <%= time_ago_in_words(question.created_at) %> ago</p> 
                    <% end %>
                </td> 
                <td>                   
                    <%= link_to 'Edit', edit_question_path(question) %>
                    <%= link_to "Delete", question, method: :delete, data: { confirm: "Are you sure about deleting this question? It might helps someone else" } %>

                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>