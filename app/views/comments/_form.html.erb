 <%= form_for [@commentable, @comment] do |f| %>
   <div class="form-group">
     <%= f.text_area :text, rows: 2, class: "form-control", placeholder: "add a comment"%>                
   </div>
   <div class="form-group">
     <%= f.submit "comment", class: "btn btn-primary" %>
   </div>
<% end %>        
